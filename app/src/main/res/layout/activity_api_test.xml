<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/apiTestLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/putValueRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="putValue()" />

            <RadioButton
                android:id="@+id/getValueRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="getValue()" />

            <RadioButton
                android:id="@+id/getAllValuesRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="getAllValues()" />
            
            <RadioButton
                android:id="@+id/userPwdInitRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userPwdInit()" />
            
            <RadioButton
                android:id="@+id/userModifyPwdRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userModifyPwd()" />
            
            <RadioButton
                android:id="@+id/userSearchRadioBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userSearch()" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/firstText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="태그명" />

        <EditText
            android:id="@+id/firstEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="100"
            android:imeOptions="actionDone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/secondText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="태그값" />

        <EditText
            android:id="@+id/secondEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="100"
            android:imeOptions="actionDone" />
    </LinearLayout>

